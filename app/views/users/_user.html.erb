<li>
  <%= link_to user.name, user %>
  <% unless current_user == user %>
    <div>
      <% if current_user.is_friend?(user) || current_user.request_pending?(user) %>
        <%= render partial: 'unfriend', locals: { user: user } %>
      <% elsif user.request_pending?(current_user) %>
        <%= render partial: 'accept', locals: { user: user } %>
      <% else %>
        <%= render partial: 'friend', locals: { user: user } %>
      <% end %>
    </div>
  <% end %>
</li>